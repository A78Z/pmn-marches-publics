{
  "name": "pmn-marches-publics",
  "version": "1.0.0",
  "description": "Plateforme PMN Marchés Publics du Sénégal - Accès à la commande publique pour les artisans",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run start:dev --workspace=backend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start:prod --workspace=backend",
    "lint": "npm run lint --workspaces",
    "setup:back4app": "npx ts-node scripts/setup-back4app.ts",
    "scrape:manual": "curl -X POST http://localhost:3001/api/scraping/trigger"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Projet Mobilier National du Sénégal",
  "license": "UNLICENSED"
}
