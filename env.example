# =============================================================================
# PMN Marchés Publics - Configuration Environnement
# =============================================================================
# ATTENTION: Ne JAMAIS commiter le fichier .env avec les vraies clés !
# Copiez ce fichier vers .env.local et remplissez les valeurs
# =============================================================================

# -----------------------------------------------------------------------------
# Back4App / Parse Server
# -----------------------------------------------------------------------------
PARSE_APPLICATION_ID=your_application_id_here
PARSE_JAVASCRIPT_KEY=your_javascript_key_here
PARSE_CLIENT_KEY=your_client_key_here
PARSE_REST_API_KEY=your_rest_api_key_here
PARSE_MASTER_KEY=your_master_key_here
PARSE_SERVER_URL=https://parseapi.back4app.com

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="PMN Marchés Publics"
NODE_ENV=development

# -----------------------------------------------------------------------------
# Scraping
# -----------------------------------------------------------------------------
SCRAPING_CRON_SCHEDULE="0 6,12,18 * * *"
SCRAPING_USER_AGENT="PMN-Scraper/1.0 (+http://pmn.sn)"
SCRAPING_TIMEOUT=30000
SCRAPING_MAX_RETRIES=3
SCRAPING_SOURCE_URL=http://www.marchespublics.sn/index.php

# -----------------------------------------------------------------------------
# Notifications Email (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM_NAME="PMN Marchés Publics"
EMAIL_FROM_ADDRESS=noreply@pmn.sn

# -----------------------------------------------------------------------------
# Notifications WhatsApp (API Business)
# -----------------------------------------------------------------------------
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token

# -----------------------------------------------------------------------------
# Sécurité
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=86400

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
